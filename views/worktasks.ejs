<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@200;300;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/styles.css">
    <title>TOODOO</title>
</head>

<body>

  <!-- Page's header -->
  <div class="p-5 rounded">
    <div class="d-flex">
      <img class="logo mx-3" src="./images/logo.png" alt="logo">
      <h1>TOODOO</h1>
    </div>
    <p class="lead sub-text">Manage your work-related tasks efficiently.</p>

 <!-- Change page button -->
    <a class="btn btn-md btn-light rounded-pill" href="/" role="button"><i class="icon-calendar"></i>Change to Daily Tasks »</a>
  </div>

  <!-- Work Tasks Title -->
  <div class="d-flex flex-column align-items-center justify-content-center p-1 gap-2 py-md-2">
    <h5 class="task-list rounded-pill px-5 py-2">Work Tasks for <%= today %></h5>
  </div>

  <!-- Start List items -->
  <div class="d-flex flex-column align-items-center justify-content-center px-4 gap-3 py-md-3">
    <div class="list-group">

    <!-- Adding new items to the list -->
      <% if (locals.workTaskList) { %>
        <ul class="d-flex flex-column px-4 gap-3 py-md-3"  id="list-container">
          <% workTaskList.forEach((task, index) => { %>
            <li class="task-list d-flex align-items-center gap-5 p-3 rounded-5 mx-5">
                <input class="form-check-input flex-shrink-0" type="checkbox" value="" style="font-size: 1.375em;">
                <strong><%= task %></strong>
                <!-- Delete button for each task -->
                  <form action="/deleteTask" method="POST" class="ms-auto">
                    <input type="hidden" name="taskIndex" value="<%= index %>">
                    <button type="submit" class="btn btn-danger rounded-circle" style="width: 30px; height: 30px; font-size: 20px; display: flex; align-items: center; justify-content: center;">&minus;</button>
                  </form>
            </li>
        <% }); %>
        
        </ul>
      <% } %>

      <!-- Add items button -->
      <form action="/worktasks" method="POST" class="d-flex gap-3 mt-4 align-items-center" id="add-task-form">
        <input type="text" name="task" placeholder="Add task" class="rounded-pill p-3 px-3">
        <input type="submit" value="+" class="btn btn-light rounded-pill px-3" id="add-task-btn">
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <div class="p-5 mx-3">
      <p class="sub-text">Copyright © <%= year %> </p>  
    </div>
  </footer>


</body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</html>

